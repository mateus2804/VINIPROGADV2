@model IEnumerable<XPTOMVC.Models.OS>

@{
    ViewData["Title"] = "OS";
}

<h2></h2>

<p>
    <a asp-action="Create" class="btn btn-default">Registrar Ordem</a>
</p>

<p>
    <a asp-action="Filter" class="btn btn-default">Filtrar Ordens</a>
</p>

<table class="table table-striped table-hover">
    <thead class="success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Servico.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrestadorServico.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataExecucao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorServico)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Servicos", new { id = item.Servico.Id })">
                        @Html.DisplayFor(ModelItem => item.Servico.Titulo)
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "PrestadorServicos", new { id = item.PrestadorServico.Id })">
                        @Html.DisplayFor(ModelItem => item.PrestadorServico.Nome)
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("Details", "Clientes", new { id = item.Cliente.Id })">
                        @Html.DisplayFor(ModelItem => item.Cliente.Nome)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.DataExecucao)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.ValorServico)
                </td>
                <td><a asp-action="Edit" asp-route-id="@item.Id">Editar</a></td>
                <td><a asp-action="Details" asp-route-id="@item.Id">Detalhes</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>