@model IEnumerable<XPTOMVC.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h2></h2>

<p>
    <a asp-action="Create" class="btn btn-default">Registrar Cliente</a>
</p>

<table class="table table-striped table-hover">
    <thead class="success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.CNPJ)
                </td>
                <td><a asp-action="Edit" asp-route-id="@item.Id" class="edit-cliente">Editar</a></td>
                <td><a asp-action="Details" asp-route-id="@item.Id" class="details-cliente">Detalhes</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id" class="delete-cliente">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>


