@model IEnumerable<XPTOMVC.Models.PrestadorServico>

@{
    ViewData["Title"] = "Prestador";
}

<h2></h2>

<p>
    <a asp-action="Create" class="btn btn-default">Registrar Prestador</a>
</p>

<table class="table table-striped table-hover">
    <thead class="success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(ModelItem => item.CPF)
                </td>
                <td><a asp-action="Edit" asp-route-id="@item.Id">Editar</a></td>
                <td><a asp-action="Details" asp-route-id="@item.Id" class="details-prestador">Detalhes</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id" class="delete-prestador">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>
